<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    tools:context="com.example.anas_ch.livetracking.SignIn">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:alpha=".5"
        app:srcCompat="@android:color/background_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userNameSignIn"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:autoText="true"
        android:background="@drawable/edit_text_created"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="User ID"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/passwordSignIn"
        android:layout_alignRight="@+id/passwordSignIn"
        android:layout_alignTop="@+id/SignInButton"
        android:text="Register" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Forget Password/User ID"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Terms and Conditions"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/passwordSignIn"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/userNameSignIn"
        android:layout_alignStart="@+id/userNameSignIn"
        android:layout_below="@+id/userNameSignIn"
        android:layout_marginTop="11dp"
        android:autoText="true"
        android:background="@drawable/edit_text_created"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="Password"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/SignInButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Login"
        android:layout_below="@+id/passwordSignIn"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/user"
        android:layout_alignTop="@+id/userNameSignIn"
        android:layout_toLeftOf="@+id/userNameSignIn"
        android:layout_toStartOf="@+id/userNameSignIn"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/passsword"
        android:layout_above="@+id/SignInButton"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/SignInButton"
        app:srcCompat="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Login Panel"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
