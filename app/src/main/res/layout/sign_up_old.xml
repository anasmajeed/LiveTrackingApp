<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="90dp"
        android:text="Live Tracking"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:id="@+id/Live"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@+id/Live"
        android:orientation="vertical"
        android:id="@+id/Feilds"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="User Name "
            android:textAlignment="textStart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:id="@+id/userNameTag"
            android:singleLine="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textAlignment="textStart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Phone Number"
            android:textAlignment="textStart"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Live"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/Feilds"
        android:id="@+id/EditFeilds"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:id="@+id/userNameSignUp"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:id="@+id/passwordSignUp"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:id="@+id/phoneNumberSignUp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/EditFeilds"
        android:orientation="vertical">

        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/buttons"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:id="@+id/SignUpButton2"
            />


    </LinearLayout>
</RelativeLayout>